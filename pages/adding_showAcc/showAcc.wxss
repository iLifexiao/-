.card {  
  position: absolute;
  top: 20px;
  left: 20px;
  right: 20px;  
  border-radius: 10px;
  height: 160px;
  background: white;
  border: 1px solid #00adb7;  
}

.share {
  position: absolute;
  width: 25px;
  height: 25px;
  top: 0px;
  right: 0px;     
}

.edit {
  position: absolute;
  width: 30px;
  height: 30px;
  top: 65px;
  right: 20px;    
}

.icon {
  position: absolute;
  width: 50px;
  height: 50px;
  top: 20px;
  left: 20px;
}

.account {  
  position: absolute;
  width: 50%;
  height: 25px;
  top: 20px;
  left: 90px;
  text-align: left;
  font-weight: bold;
  font-size: 20px;  
}

.name {  
  position: absolute;
  width: 50%;
  height: 15px;
  top: 50px;
  left: 90px;
  text-align: left;
  font-size: 13px;
  color: lightgray;
}

.pwd {
  position: absolute;
  width: 80%;
  height: 25px;
  top: 85px;
  left: 20px;
  text-align: left; 
}

.remark {
  position: absolute;
  width: 80%;
  height: 25px;
  bottom: 20px;
  left: 20px;
  text-align: left;  
}